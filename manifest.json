{
  "manifest_version": 3,
  "name": "Image Blurrer (Vite)",
  "version": "1.0.1",
  "description": "Automatically blurs images on webpages with advanced controls.",
  "browser_specific_settings": {
    "gecko": {
      "id": "{f92f4c2e-7b0e-4b7f-bb69-7a9e376c1e75}",
      "strict_min_version": "121.0"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts":["dist/background.js"]
  },
  "action": {
    "default_popup": "dist/src/popup/index.html",
    "default_icon": {
      "16":  "icons/icon-16.png",
      "32":  "icons/icon-32.png",
      "48":  "icons/icon-48.png"
    }
  },
  "icons": {
    "16":  "icons/icon-16.png",
    "32":  "icons/icon-32.png",
    "48":  "icons/icon-48.png",
    "96":  "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ]
}